                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tenKGuessesStrengthMeter"
                app:layout_constraintTop_toBottomOf="@id/tenKGuessesTitle"
