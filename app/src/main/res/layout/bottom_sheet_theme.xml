<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_12"
    android:paddingBottom="@dimen/margin_8"
    android:orientation="vertical"
    android:layout_gravity="center">

    <include
        layout="@layout/bottom_sheet_header"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/theme_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:paddingStart="@dimen/margin_22"
        android:paddingEnd="@dimen/margin_22"
        app:chipSpacingVertical="@dimen/margin_2.5"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/follow_system"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_75"
            android:layoutDirection="rtl"
            android:checked="true"
            app:closeIconEnabled="true"
            style="@style/FollowSystemChipTheme"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_75"
            android:layoutDirection="rtl"
            app:closeIconEnabled="true"
            style="@style/LightChipTheme"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/dark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_75"
            android:layoutDirection="rtl"
            app:closeIconEnabled="true"
            style="@style/DarkChipTheme"/>

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_4"
        android:paddingBottom="@dimen/margin_8"
        android:text="@string/cancel"
        android:clickable="true"
        android:focusable="true"
        android:textSize="@dimen/text_17"
        style="@style/NegativeButtonStyle" />

</LinearLayout>