<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginBottom="@dimen/margin_12"
    android:layout_marginHorizontal="@dimen/margin_12"
    android:backgroundTint="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_4"
        android:paddingVertical="@dimen/margin_4">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/supportMethodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_4"
        android:drawableStart="@drawable/ic_liberapay"
        android:drawablePadding="@dimen/margin_8"
        android:text="@string/liberapay"
        android:textSize="@dimen/text_18"
        style="@style/MediumBoldText"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/supportMethodQr"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_gravity="center"
        android:src="@drawable/ic_liberapay_qr"
        android:contentDescription="@string/liberapay_url"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/supportMethodUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:paddingVertical="@dimen/margin_16"
        android:gravity="center"
        android:text="@string/liberapay_url"
        android:textColor="@color/color_url"
        android:textSize="@dimen/text_17"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>